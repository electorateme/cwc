#!/usr/bin/env ruby

require 'commander/import'
require 'cwc'

program :version, Cwc::VERSION
program :description, 'CLI for interacting with cwc api'
 
command :test do |c|
  c.syntax = 'cwc test [options]'
  c.summary = 'Tests API connection'
  c.description = ''
  c.example 'description', 'command example'
  c.option '--some-switch', 'Some switch that does something'
  c.action do |args, options|
    puts "I'm putting the new cwc object: "+Cwc.api_url('v2/message')
  end
end