#!/usr/bin/env ruby

require 'commander/import'
require 'cwc'

program :version, Cwc::VERSION
program :description, 'CLI for interacting with cwc api'
 
command :test do |c|
  c.syntax = 'cwc test'
  c.summary = 'Runs test server'
  c.description = 'Runs test server using Sinatra to test API requests'
  c.action do |args, options|
    exec 'ruby "lib/cwc/sinatra.rb"'
  end
end